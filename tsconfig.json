{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "types": [
            "node",
            "vue"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "auto-imports.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}